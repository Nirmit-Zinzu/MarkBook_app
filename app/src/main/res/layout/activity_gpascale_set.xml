            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/cColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dPlusL"
            android:id="@+id/dPlusL"
            android:layout_below="@+id/cMinusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/dColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dL"
            android:id="@+id/dL"
            android:layout_below="@+id/dPlusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/dColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dMinusL"
            android:id="@+id/dMinusL"
            android:layout_below="@+id/dL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/dColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fL"
            android:id="@+id/fL"
            android:layout_below="@+id/dMinusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/fColor"/>


        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/aPlusGPA"
        android:id="@+id/aPlusGPA"
        android:layout_below="@+id/gpaTitle"
        android:padding="6dp"
        android:ems="8"
        android:textAlignment="center"
            android:background="@color/aColor"
        android:layout_alignParentEnd="true"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/aGPA"
            android:id="@+id/aGPA"
            android:layout_below="@+id/aPlusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"
            android:background="@color/aColor"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/aMinusGPA"
            android:id="@+id/aMinusGPA"
            android:layout_below="@+id/aGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/aColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/bPlusGPA"
            android:id="@+id/bPlusGPA"
            android:layout_below="@+id/aMinusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/bColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/bGPA"
            android:id="@+id/bGPA"
            android:layout_below="@+id/bPlusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/bColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/bMinusGPA"
            android:id="@+id/bMinusGPA"
            android:layout_below="@+id/bGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/bColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/cPlusGPA"
            android:id="@+id/cPlusGPA"
            android:layout_below="@+id/bMinusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/cColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/cGPA"
            android:id="@+id/cGPA"
            android:layout_below="@+id/cPlusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/cColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/cMinusGPA"
            android:id="@+id/cMinusGPA"
            android:layout_below="@+id/cGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/cColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/dPlusGPA"
            android:id="@+id/dPlusGPA"
            android:layout_below="@+id/cMinusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/dColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/dGPA"
            android:id="@+id/dGPA"
            android:layout_below="@+id/dPlusGPA"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/dColor"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/dMinusGPA"
            android:id="@+id/dMinusGPA"
            android:layout_below="@+id/dGPA"
