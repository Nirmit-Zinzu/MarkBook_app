<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        tools:context="com.nirmit.markbook.GPAScaleSet"
        android:background="#909091">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/percentageTitle"
            android:ems="6"
            android:textAlignment="center"
            android:id="@+id/percentageTitle"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/letterTitle"
            android:id="@+id/letterTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"

           />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/GPATitle"
            android:id="@+id/gpaTitle"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:ems="6"
            android:textAlignment="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aPlus"
            android:id="@+id/aPlus"
            android:layout_below="@+id/percentageTitle"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/aColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a"
            android:id="@+id/a"
            android:layout_below="@+id/aPlus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/aColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aMinus"
            android:id="@+id/aMinus"
            android:layout_below="@+id/a"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/aColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bPlus"
            android:id="@+id/bPlus"
            android:layout_below="@+id/aMinus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/bColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b"
            android:id="@+id/b"
            android:layout_below="@+id/bPlus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/bColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bMinus"
            android:id="@+id/bMinus"
            android:layout_below="@+id/b"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/bColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cPlus"
            android:id="@+id/cPlus"
            android:layout_below="@+id/bMinus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/cColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c"
            android:id="@+id/c"
            android:layout_below="@+id/cPlus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/cColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cMinus"
            android:id="@+id/cMinus"
            android:layout_below="@+id/c"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/cColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dPlus"
            android:id="@+id/dPlus"
            android:layout_below="@+id/cMinus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/dColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d"
            android:id="@+id/d"
            android:layout_below="@+id/dPlus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/dColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dMinus"
            android:id="@+id/dMinus"
            android:layout_below="@+id/d"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/dColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f"
            android:id="@+id/f"
            android:layout_below="@+id/dMinus"
            android:padding="6dp"
            android:ems="8"
            android:textAlignment="center"
            android:background="@color/fColor"/>


        <!-- Letter Grades -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aPlusL"
            android:id="@+id/aPlusL"
            android:layout_below="@+id/letterTitle"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/aColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aL"
            android:id="@+id/aL"
            android:layout_below="@+id/aPlusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/aColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aMinusL"
            android:id="@+id/aMinusL"
            android:layout_below="@+id/aL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/aColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bPlusL"
            android:id="@+id/bPlusL"
            android:layout_below="@+id/aMinusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/bColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bL"
            android:id="@+id/bL"
            android:layout_below="@+id/bPlusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/bColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bMinusL"
            android:id="@+id/bMinusL"
            android:layout_below="@+id/bL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/bColor"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cPlusL"
            android:id="@+id/cPlusL"
            android:layout_below="@+id/bMinusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/cColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cL"
            android:id="@+id/cL"
            android:layout_below="@+id/cPlusL"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:ems="4"
            android:textAlignment="center"
            android:background="@color/cColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cMinusL"
